@{ 
    var postPages = Model.DocumentList(Keys.PageDocuments).OrderByDescending(x => x.Get<DateTime>(BlogKeys.Published));
    string tagName = Model.String(BlogKeys.Tag);
    string tag = tagName.ToLowerInvariant().Replace(' ', '-');
    tag = tag.StartsWith(".") ? tag.Substring(1) : tag; 
}

<div class="title mb-5">
    <h1>Tulisan dengan topik @tagName</h1>
</div>


@foreach(var post in postPages){
    @Html.Partial("Partials/Posts/_PostPartial", post)
}


<a href="@Context.GetLink(Context.String(BlogKeys.PostsPath))">Kembali ke indeks</a>