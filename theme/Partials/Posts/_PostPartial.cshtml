@model IDocument

@{
    var published = Model.DateTime(BlogKeys.Published);
    var tags = Model.WithoutSettings.Get<IEnumerable<string>>(BlogKeys.Tags);
}

<div class="card mb-5">
    <div class="card-header card-header-primary">
        @Model.WithoutSettings.String(BlogKeys.Title)
    </div>
    <div class="card-body">
            @Html.Raw(Model.String(BlogKeys.Excerpt))
        <a href="@Context.GetLink(Model)">Keep reading <i class="fas fa-chevron-right"></i><i class="fas fa-chevron-right"></i></a>  
    </div>
    <div class="card-footer">
        <div class="container-fluid">
            <div class="d-flex flex-row-reverse">
                <div class="p-1">
                    <span class="mr-3"><i class="fa fa-user"></i> @Model.String("Author")</span>
                    <span><i class="fa fa-calendar"></i> <time datetime="@published.ToString("YYYY-MM-DD")">@(published.ToLongDateString(Context))</time></span>
                </div>
            </div>
            <div class="d-flex flex-row-reverse">
                <div class="p-1">
                    @Html.Partial("Partials/Tags/_AllTagsForPostPartial")  
                </div> 
            </div>
        </div>
    </div>
</div>


