@{
    Layout=null;
}

<!DOCTYPE html>
<html>
@Html.Partial("Partials/_Head")
<body class="landing-page sidebar-collapse">
    @Html.Partial("Partials/_Nav")

    <div class="page-header header-filter" data-parallax="true" style="background-image: url('../assets/img/passion-led-us-here.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="title">Blog Fanioz</h1>
                    <h4>hanya sebuah coretan</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="main main-raised">
        <div class="section section-basic">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <div class="title mb-5">
                            <h1>Postingan Terakhir</h1>
                        </div>

                        @foreach(IDocument post in Model.DocumentList(Keys.PageDocuments))
                        {
                            @Html.Partial("Partials/Posts/_PostPartial", post)
                        }
                    </div>

                    <div class="col-md-4">
                        
                        <h1>Tags</h1>

                        <div>
                            @Html.Partial("Partials/Tags/_AllTagsPartial")
                        </div>
                    </div>
                </div>

                @if(Model.Bool(Keys.HasPreviousPage)) {
                    <a href="@(Context.GetLink(Model.Document(Keys.PreviousPage)))"><span aria-hidden="true">&larr;</span> Terbaru</a> 
                } 

                @if(Model.Bool(Keys.HasNextPage)) {
                    <a href="@(Context.GetLink(Model.Document(Keys.NextPage)))">Older <span aria-hidden="true">&rarr;</span></a> 
                }

                @if(Context.Bool(BlogKeys.GenerateArchive))
                {
                    <a href="@Context.GetLink(Context.String(BlogKeys.PostsPath))">Lihat Semua <i class="fas fa-chevron-right"></i><i class="fas fa-chevron-right"></i></a>
                }
            </div>
        </div>
    </div>
    @Html.Partial("Partials/_Footer")
    @Html.Partial("Partials/_Scripts")
</body>
</html>

